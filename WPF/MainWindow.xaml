<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Memory" Height="640" Width="960" 
        WindowStartupLocation="CenterScreen" 
        Icon="Assets\Logo.png"
        Background="#7fb3ff"
        WindowStyle="None">
    <Grid>
        <Image Source="Assets/Logo.png" Width="200" Height="200" VerticalAlignment="Top" Margin="0 0 0 0"></Image>
        <TextBlock Text="Memory" Style="{DynamicResource Text}" FontSize="60" HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="0,150,0,0"/>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Margin="0 100 0 0">
            <Button Content="Play" Margin="10"  Click="PlayButton_Click" Style="{DynamicResource TextButton}"/>
            <Button Content="Leaderboard" Margin="10" Click="LeaderboardButton_Click" Style="{DynamicResource TextButton}"/>
            <Button Content="Quit" Margin="10" Click="QuitButton_Click" Style="{DynamicResource TextButton}"/>
        </StackPanel>
    </Grid>
</Window>
